<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header với navigation và date range -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageButton
                android:id="@+id/btnPreviousPeriod"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Previous period" />

            <TextView
                android:id="@+id/tvDateRange"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="01/08/2025 - 07/08/2025"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333" />

            <ImageButton
                android:id="@+id/btnNextPeriod"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_right"
                android:contentDescription="Next period" />

        </LinearLayout>

        <!-- Period Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/selector_background"
            android:padding="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btnWeek"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tuần"
                android:textSize="14sp"
                android:background="@drawable/period_selector"
                android:textColor="@color/period_text_color"
                android:layout_margin="2dp" />

            <TextView
                android:id="@+id/btnMonth"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Tháng"
                android:textSize="14sp"
                android:background="@drawable/period_selector"
                android:textColor="@color/period_text_color"
                android:layout_margin="2dp" />

            <TextView
                android:id="@+id/btnYear"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Năm"
                android:textSize="14sp"
                android:background="@drawable/period_selector"
                android:textColor="@color/period_text_color"
                android:layout_margin="2dp" />

        </LinearLayout>

        <!-- Chart Type Selector -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/selector_background"
            android:padding="4dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/btnPieChart"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Biểu đồ tròn"
                android:textSize="14sp"
                android:background="@drawable/chart_type_selector"
                android:textColor="@color/chart_type_text_color"
                android:layout_margin="2dp" />

            <TextView
                android:id="@+id/btnBarChart"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Biểu đồ cột"
                android:textSize="14sp"
                android:background="@drawable/chart_type_selector"
                android:textColor="@color/chart_type_text_color"
                android:layout_margin="2dp" />

        </LinearLayout>

        <!-- Pie Chart Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/chartCard"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:id="@+id/pieChartFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />

        </androidx.cardview.widget.CardView>

        <!-- Bar Chart Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/barChartCard"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <FrameLayout
                android:id="@+id/barChartFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp" />

        </androidx.cardview.widget.CardView>

        <!-- Summary Cards -->
        <LinearLayout
            android:id="@+id/summaryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thu Nhập"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvIncomeAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+0 VNĐ"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi Tiêu"
                        android:textSize="12sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/tvExpenseAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-0 VNĐ"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#F44336"
                        android:layout_marginTop="4dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Balance Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/balanceCard"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Số Dư"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VNĐ"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="4dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- No Data Container -->
        <LinearLayout
            android:id="@+id/noDataContainer"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_no_data"
                android:alpha="0.3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chưa có dữ liệu"
                android:textSize="16sp"
                android:textColor="#999999"
                android:layout_marginTop="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm giao dịch để xem biểu đồ phân tích"
                android:textSize="12sp"
                android:textColor="#CCCCCC"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>